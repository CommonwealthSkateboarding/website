# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /*path/                     controllers.Application.removeTrailingSlash(path: String)

# Main Site
GET     /                           controllers.Application.index(page: Long ?=0)
GET     /blog                       controllers.Application.blog(page: Long ?=0)
GET     /blog/:id                   controllers.Application.showNews(id: String)
GET     /shop                       controllers.Application.shop()
GET     /camp                       controllers.Application.camp()
GET     /camp/:id                   controllers.Application.campDetail(id: String)
GET		/sessions 					controllers.Application.sessions()
GET     /events                     controllers.Application.events()
GET     /events/:id                 controllers.Application.eventDetail(id: String)
GET     /about                      controllers.Application.about()
GET     /contact                    controllers.Application.contact()
POST    /camp/:id/register          controllers.Application.registerForCampWithStripe(id: String)
POST    /event/:id/register         controllers.Application.registerForEventWithStripe(id: String)
GET     /registration/:id           controllers.Application.registrationPage(id: String)

# Session
GET     /login                      controllers.Application.login()
GET     /logout                     com.feth.play.module.pa.controllers.Authenticate.logout
GET     /authenticate/:provider     com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET     /authenticate/:provider/denied     controllers.Application.oAuthDenied(provider: String)

